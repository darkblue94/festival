<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <title>Document</title>
    <style>
        * {
            color: rgb(126, 226, 11);
            background-color: white;
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            font-size: 14px;
            padding: 45px;


        }

        span {
            color: yellow;
            font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-;
            font-size: 9px;

        }

        input {
            grid: 30px;
        }

        #header {
            width: 400px;
            height: 220px;
            background-color: black;

            overflow: scroll;


        }

        .friends {
            height: 200px;
            width: 400px;
            background-color: red;
            overflow: scroll;

        }

        .request {
            height: 200px;
            width: 400px;
            background-color: green;
            overflow: scroll;

        }
    </style>


</head>

<body>
    <div id="header">
        @model User
        <h3> Hello @Model.first_name @Model.last_name </h3>
        <a href="/logout"> Logout</a>

        <h1> DESCRIPTION @Model.description </h1>
    </div>
    <h1> YOUR FRIENDS </h1>
    <div class="friends">


        <table>
            <thead>
                <th> Your Friends </th>
            </thead>
            @foreach( var com in @ViewBag.f ){
            @if(@Model.UserId == @com.UserFollowed.UserId){

            continue;
            }else{

            <tbody>
                <tr>

                    <td><a href="detail/@com.UserFollowed.UserId"> @com.UserFollowed.first_name
                            @com.UserFollowed.last_name </a></td>
                </tr>
            </tbody>
            }
            }
        </table>


    </div>
    <h1> INVITATIONS </h1>
    <div class="request">
        <table>
            <thead>
                <th> Name </th>
                <th> Action </th>
                <a href="logout"> Logout </a>

            </thead>
            <tbody>

                @foreach( var w in @ViewBag.u){

                @if(@Model.UserId == @w.UserId){
                continue;
                }else{
                <tr>
                    <td><a href="detail/@w.UserId"> @w.first_name @w.last_name </a> </td>
                    <td>
                        <a href="connect/@w.UserId"> Accept </a>
                    </td>
                </tr>
                }
                }




            </tbody>



        </table>
    </div>
    <a href="/all_users"> All Users </a>

</body>

</html>