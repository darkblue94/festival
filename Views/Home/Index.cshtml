<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <style>
        * {
            color: #18DD00;
            background-color:#2f2f2f;
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            font-size: 24px;
            


        }

        span {
            color: yellow;
            font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-;
            font-size: 6px;
        }

        input {
            grid: 30px;
        }
        .form-control{
            height:25px;
            text-align: center;
            color:#18DD00;
            font-size:16px;
        }
    </style>
    <title>Register</title>
</head>

<body>

    <p style="color:yellow;"> @ViewBag.Error</p>

    @model ValidateUser
    <form asp-action="Register" method="post">
        <div class="form-group">
            <span asp-validation-for="FirstName"></span>
            <label asp-for="FirstName">First Name: </label>
            <input class="form-control" asp-for="FirstName" />
            <br />
        </div>
        <div class="form-group">
            <span asp-validation-for="LastName"></span>
            <label asp-for="LastName">Last Name: </label>
            <input class="form-control" asp-for="LastName" />
            <br />
        </div>
        <div class="form-group">

            <span asp-validation-for="Email"></span>
            <label asp-for="Email">Email: </label>
            <input class="form-control" asp-for="Email" />
        </div>

        <div class="form-group">
            <span asp-validation-for="Password"></span>
            <label asp-for="Password">Password: </label>
            <input class="form-control" asp-for="Password" />
            <br />
        </div>
        <div class="form-group">

            <span asp-validation-for="confirmpassword"></span>
            <label asp-for="confirmpassword">ConfirmPassword: </label>
            <input class="form-control" asp-for="confirmpassword" />
            <br />
        </div>


        <button type="submit">Register</button>
    </form>

    <div class="login">
       

        <form action="/process" method="post">
            <div class="form-group">
                <label for="Email">
                    Email:
                    <input class="form-control" type="text" name="LogEmail">
                </label>
                <br />
            </div>
            <div class="form-group">
                <label for="Password">
                    Password:
                    <input class="form-control" type="Password" name="LogPass">
                </label>
                <br />
            </div>
            <input type="submit" value="Login">
        </form>
    </div>
    <a href="/"> Go Back </a>

</body>

</html>